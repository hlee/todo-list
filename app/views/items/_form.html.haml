= form_for @item do |f|
  -if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :bg_status
    = f.number_field :bg_status
  .field
    = f.label :priority
    = f.number_field :priority
  .actions
    = f.submit 'Save'
